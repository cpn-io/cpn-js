{
  "name": "cpn-ide",
  "version": "1.0.1",
  "author": "INDEV",
  "main": "electron/dist/main.js",
  "scripts": {
    "ng": "ng",
    "start": "node ./version.build.js && ng serve --proxy-config proxy.conf.json",
    "updateBuild": "node ./replace.build.js",
    "build": "node ./version.build.js && ng build",
    "buildProd": "node ./version.build.js && ng build --prod --build-optimizer=false --base-href ./",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "docs": "typedoc --options typedoc.json ./src/app/ ",
    "compodoc": "compodoc -p tsconfig.json",

    "buildBackendLinux": "./../backend/gradlew -p ./../backend build",
    "buildBackendWin": ".\\..\\backend\\gradlew -p .\\..\\backend build",

    "electronBuild": "tsc --p electron",
    
    "electronCleanLinux": "rm -rf ./electron/dist && rm -rf ./dist",
    "electronCleanWin": "rmdir /S /Q \".\\electron\\dist\" 2>NULL && rmdir /S /Q \".\\dist\" 2>NULL",
    "electronBuildAllLinux": "npm run electronCleanLinux --silent || npm run buildBackendLinux && npm run buildProd && npm run electronBuild",
    "electronBuildAllWin": "npm run electronCleanWin --silent || npm run buildBackendWin && npm run buildProd && npm run electronBuild",

    "electronRun": "electron . > electron-app.log",
    "electronInstaller": "electron-builder"
  },
  "build": {
    "appId": "cpn-ide",
    "extends": null,
    "win": {
      "sign": "./customSign.js",
      "target": "msi"
    },
    "files": [
      "./dist/**/*",
      "./electron/dist/main.js",
      "./electron/splash.html",
      "./electron/splash.png"
    ],
    "extraResources": [
      {
        "from": "../backend/cpn-ide-back/build/libs/",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "private": true,
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.4",
    "@angular/cli": "~8.3.4",
    "@angular/compiler-cli": "~8.2.5",
    "@angular/language-service": "~8.2.5",
    "@compodoc/compodoc": "^1.1.10",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/jquery": "^3.3.24",
    "@types/node": "^10.14.8",
    "advanced-json-path": "^1.0.8",
    "bootstrap": "^4.3.1",
    "codelyzer": "~4.5.0",
    "electron": "^3.1.13",
    "electron-builder": "^20.40.2",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.4.0",
    "replace-in-file": "^3.4.4",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typedoc": "^0.15.0"
  },
  "dependencies": {
    "@angular/animations": "~8.2.5",
    "@angular/cdk": "^8.2.3",
    "@angular/common": "~8.2.5",
    "@angular/compiler": "~8.2.5",
    "@angular/core": "~8.2.5",
    "@angular/forms": "~8.2.5",
    "@angular/http": "~7.0.0",
    "@angular/material": "^8.0.1",
    "@angular/platform-browser": "^8.2.14",
    "@angular/platform-browser-dynamic": "~8.2.5",
    "@angular/router": "~8.2.5",
    "@fortawesome/angular-fontawesome": "^0.3.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.8",
    "@fortawesome/free-solid-svg-icons": "^5.5.0",
    "@ng-bootstrap/ng-bootstrap": "^4.1.0",
    "@progress/kendo-angular-l10n": "^1.3.0",
    "@progress/kendo-angular-scrollview": "^2.1.0",
    "@types/file-saver": "^1.3.0",
    "angular-fontawesome": "^1.0.0",
    "angular-split": "^2.0.0-beta.8",
    "angular-tree-component": "^8.0.0",
    "circular-json": "^0.5.9",
    "core-js": "^2.5.4",
    "dateformat": "^3.0.3",
    "deep-diff": "^1.0.2",
    "deep-equal": "^1.1.0",
    "diagram-js": "^3.3.1",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^3.0.9",
